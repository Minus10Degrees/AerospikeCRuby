#!/usr/bin/env ruby

require "bundler/setup"
require "aerospike_c_ruby"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

require "irb"

@client = AerospikeC::Client.new("127.0.0.1", 3000)
@client.create_index("test", "test", "foo", "test_test_foo_idx", :numeric)
@key = AerospikeC::Key.new("test", "test", "test1")
@key_2 = AerospikeC::Key.new("test", "test", "test2")
@key_3 = AerospikeC::Key.new("test", "test", "test3")
@client.put(@key, {"foo": 0})
@client.put(@key_2, {"foo": 1, "bar": 2})
@client.put(@key_3, {"foo": 1, "bar": 3})
@query = AerospikeC::Query.new("test", "test")
@query.eql!("foo", 1)
@predexp = AerospikeC::PredExp.new
@predexp.eql("bar", 2)
@query.predexp = @predexp
IRB.start
